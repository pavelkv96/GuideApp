<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:weightSum="2">

  <include
    layout="@layout/map"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_marginTop="@dimen/actionBarSize"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/btn_fragment_map_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/view_start"/>

    <Button
      android:id="@+id/btn_fragment_map_stop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/view_stop"/>

    <Button
      android:id="@+id/btn_fragment_map_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/view_next"
      android:visibility="gone"/>

    <Button
      android:id="@+id/btn_fragment_map_tilt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2D"
      android:visibility="invisible"/>

    <TextView
      android:id="@+id/tv_fragment_map_distance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100"/>

    <ImageView
      android:id="@+id/fragment_map_indicator"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_gravity="center_vertical"
      android:contentDescription="@null"
      android:src="@drawable/ic_location_disabled"
      android:visibility="gone"/>

  </LinearLayout>
</LinearLayout>