<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:weightSum="2">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/fragment_map_map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".delegation.NavigationDrawerActivity"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/btn_fragment_map_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Start"/>

    <Button
      android:id="@+id/btn_fragment_map_stop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Stop"/>

    <Button
      android:id="@+id/btn_fragment_map_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next"/>

    <TextView
      android:id="@+id/tv_fragment_map_distance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100"/>

  </LinearLayout>
</LinearLayout>
