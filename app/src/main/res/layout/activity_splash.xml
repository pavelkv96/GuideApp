<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".activities.splash.SplashActivity">

  <Button
    android:id="@+id/btn_activity_splash_load_and_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Load data on the storage and start app"/>

  <Button
    android:id="@+id/btn_activity_splash_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Load"/>

  <Button
    android:id="@+id/btn_activity_splash_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete"/>

  <Button
    android:id="@+id/btn_activity_splash_un_zip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Un zip"/>

</LinearLayout>