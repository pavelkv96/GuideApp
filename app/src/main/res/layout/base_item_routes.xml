<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/iv_item_preview_photo_route"
    android:layout_width="120dp"
    android:layout_height="95dp"
    android:contentDescription="@null"
    android:scaleType="fitXY"
    tools:src="@tools:sample/avatars"/>

  <TextView
    android:id="@+id/tv_item_routes_duration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_alignBottom="@+id/iv_item_preview_photo_route"
    android:textColor="#fff"
    android:textSize="12sp"
    tools:text="15 h 55 m"/>

  <TextView
    android:id="@+id/tv_item_routes_distance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_alignBottom="@id/iv_item_preview_photo_route"
    android:layout_toEndOf="@id/tv_item_routes_duration"
    android:textColor="#fff"
    android:textSize="12sp"
    tools:text="150 km"/>
</RelativeLayout>
