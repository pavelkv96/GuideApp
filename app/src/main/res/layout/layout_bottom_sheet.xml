<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/bottom_sheet"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  app:anchorPoint="300dp"
  app:behavior_peekHeight="?attr/actionBarSize"
  app:layout_behavior="com.grsu.ui.bottomsheet.BottomSheetBehaviorGoogleMaps">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_bottom_sheet_title"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:paddingTop="4dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:background="@color/colorPrimary"
      android:maxLines="2"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      app:autoSizeMaxTextSize="20sp"
      app:autoSizeMinTextSize="14sp"
      app:autoSizeStepGranularity="1sp"
      app:autoSizeTextType="uniform"
      tools:text="Полное наименование маршрута содержащее 50 символа"/>

    <ImageView
      android:id="@+id/iv_bottom_sheet_route_image"
      android:layout_width="400dp"
      android:layout_height="300dp"
      android:layout_marginTop="20dp"
      android:layout_below="@+id/tv_bottom_sheet_title"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:contentDescription="@null"
      tools:src="@tools:sample/avatars"/>

    <TextView
      android:id="@+id/tv_bottom_sheet_route_distance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="50dp"
      android:layout_below="@+id/iv_bottom_sheet_route_image"
      android:textColor="@android:color/black"
      tools:text="Протяжённость: "/>

    <TextView
      android:id="@+id/tv_bottom_sheet_route_duration"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_below="@+id/tv_bottom_sheet_route_distance"
      android:textColor="@android:color/black"
      tools:text="Продолжительность: "/>

    <TextView
      android:id="@+id/tv_bottom_sheet_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/tv_bottom_sheet_route_duration"
      android:gravity="start"
      android:textColor="@android:color/black"
      tools:text="@tools:sample/lorem/random"/>
  </RelativeLayout>

</android.support.v4.widget.NestedScrollView>