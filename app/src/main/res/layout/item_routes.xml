<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:background="?android:attr/selectableItemBackground">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/iv_item_preview_photo_route"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        tools:src="@color/cardview_dark_background"/>

      <TextView
        android:id="@+id/tv_item_routes_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/iv_item_preview_photo_route"
        android:textColor="#fff"
        tools:text="15 h 55 m"/>

      <TextView
        android:id="@+id/tv_item_routes_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@id/iv_item_preview_photo_route"
        android:layout_toEndOf="@id/tv_item_routes_duration"
        android:textColor="#fff"
        tools:text="150 km"/>
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_item_routes_name_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:lines="2"
        android:textColor="#000"
        tools:text="ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME N"/>

      <Button
        android:id="@+id/btn_item_routes_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tv_item_routes_name_route"
        android:background="#fff"
        android:drawableTint="#4c84ff"
        android:text="@string/about_route"
        android:textColor="#4c84ff"
        android:visibility="gone"
        tools:visibility="visible"/>

      <ImageButton
        android:id="@+id/ib_item_routes_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_item_routes_name_route"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:contentDescription="@null"
        android:src="@drawable/ic_download"
        android:tint="@color/blue"
        android:visibility="gone"
        tools:visibility="visible"/>

      <Button
        android:id="@+id/btn_item_routes_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/tv_item_routes_name_route"
        android:layout_toEndOf="@+id/btn_item_routes_about"
        android:background="#fff"
        android:drawableTint="#4c84ff"
        android:text="@string/download"
        android:textColor="#4c84ff"
        android:visibility="gone"
        tools:visibility="visible"/>
    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>