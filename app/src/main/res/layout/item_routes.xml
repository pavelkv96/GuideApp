<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:layout_marginStart="10dp"
  android:layout_marginEnd="10dp"
  android:background="?android:attr/selectableItemBackground"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/iv_item_activity_found_routes"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>

      <TextView
        android:id="@+id/tv_type_item_activity_found_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/iv_item_activity_found_routes"
        android:textColor="#fff"
        tools:text="walking route"/>

      <TextView
        android:id="@+id/tv_distance_item_activity_found_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/iv_item_activity_found_routes"
        android:layout_toEndOf="@id/tv_type_item_activity_found_routes"
        android:layout_toRightOf="@id/tv_type_item_activity_found_routes"
        android:textColor="#fff"
        tools:text="150 km"/>
    </RelativeLayout>

    <TextView
      android:id="@+id/tv_name_route_item_activity_found_routes"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:lines="2"
      android:textColor="#000"
      tools:text="ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME N"/>

    <TextView
      android:id="@+id/tv_author_item_activity_found_routes"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:lines="1"
      tools:text="ROUTE NAME ROUTE"/>
  </LinearLayout>
</android.support.v7.widget.CardView>