<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:weightSum="2">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:id="@+id/btn_activity_route_settings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Settings"/>

    <TextView
      android:id="@+id/tv_activity_route_distance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100"/>

    <CheckBox
      android:id="@+id/cb_activity_route_get_all"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="vertical">

    <fragment
      android:id="@+id/activity_route_map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      tools:context=".MapsActivity"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/btn_activity_route_start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Start"/>

    <Button
      android:id="@+id/btn_activity_route_stop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Stop"/>

    <Button
      android:id="@+id/btn_activity_route_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next"/>

  </LinearLayout>
</LinearLayout>