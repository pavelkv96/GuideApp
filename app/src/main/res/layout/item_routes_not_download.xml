<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:background="?android:attr/selectableItemBackground">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <include layout="@layout/base_item_routes"/>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_item_routes_name_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:lines="2"
        android:textColor="#000"
        tools:text="ROUTE NAME ROUTE NAME ROUTE NAME ROUTE NAME"/>

      <Button
        android:id="@+id/btn_item_routes_about"
        style="@style/MaterialButton"
        android:layout_width="79dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tv_item_routes_name_route"
        android:text="@string/about_route"
        android:textSize="12sp"
        android:visibility="visible"
        tools:visibility="visible"/>

      <Button
        android:id="@+id/btn_item_routes_download"
        style="@style/MaterialButton"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tv_item_routes_name_route"
        android:layout_toEndOf="@+id/btn_item_routes_about"
        android:text="@string/download"
        android:textSize="12sp"
        android:visibility="visible"
        tools:visibility="visible"/>
    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>