<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <!-- Splash theme. -->
  <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/background_splash</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
    <item name="iconTint">@android:color/white</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

  <style name="MaterialTextView" parent="Widget.AppCompat.TextView">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">14sp</item>
    <item name="android:visibility">visible</item>
  </style>

  <style name="MaterialButton.Splash">
    <item name="android:layout_height">48dp</item>
    <item name="backgroundTint">@android:color/white</item>
    <item name="android:paddingStart">8dp</item>
    <item name="android:paddingEnd">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">@color/blue</item>
    <item name="cornerRadius">4dp</item>
  </style>

  <style name="MaterialButton.Splash.Icon">
    <item name="android:paddingStart">4dp</item>
    <item name="iconTint">@color/blue</item>
  </style>

  <style name="MaterialButton.ItemRoute">
    <item name="android:enabled">false</item>
    <item name="android:padding">0dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">12sp</item>
    <item name="backgroundTint">@android:color/white</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">4dp</item>
    <item name="iconSize">18dp</item>
    <item name="iconTint">@color/blue</item>
  </style>

  <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_margin">16dp</item>
  </style>

  <style name="RoundMapButton" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="rippleColor">@color/colorPrimary</item>
    <item name="tint">@color/colorPrimary</item>
    <item name="backgroundTint">@android:color/white</item>
    <item name="borderWidth">0dp</item>
    <item name="fabCustomSize">@dimen/round_button_size</item>
  </style>

  <style name="FloatingActionButton.ObjectDetails">
    <item name="backgroundTint">@android:color/white</item>
    <item name="tint">@color/colorPrimary</item>
    <item name="rippleColor">@color/colorPrimary</item>
    <item name="layout_anchorGravity">bottom|right|end</item>
    <item name="borderWidth">0dp</item>
  </style>

  <style name="FloatingActionButton.RouteDetails">
    <item name="backgroundTint">@android:color/white</item>
    <item name="tint">@color/colorPrimary</item>
    <item name="rippleColor">@color/colorPrimary</item>
    <item name="layout_anchorGravity">end</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="elevation">8dp</item>
    <item name="borderWidth">0dp</item>
  </style>

  <style name="FloatingActionButton.Order">
    <item name="backgroundTint">@android:color/white</item>
    <item name="tint">@color/colorPrimary</item>
    <item name="rippleColor">@color/colorPrimary</item>
    <item name="layout_anchorGravity">bottom|right|end</item>
    <item name="borderWidth">0dp</item>
  </style>

</resources>
