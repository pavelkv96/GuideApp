<resources>
  <declare-styleable name="MapScaleView">
    <attr name="scale_textSize" format="dimension"/>
    <attr name="scale_strokeWidth" format="dimension"/>
    <attr name="scale_color" format="color"/>
    <attr name="scale_miles" format="boolean"/>
    <attr name="scale_outline" format="boolean"/>
    <attr name="scale_expandRtl" format="boolean"/>
  </declare-styleable>

  <declare-styleable name="CustomBottomSheetBehavior">
    <attr name="anchorPoint" format="dimension"/>
    <attr name="defaultState" format="enum">
      <enum name="stateAnchorPoint" value="3" />
      <enum name="stateExpanded" value="4"/>
      <enum name="stateCollapsed" value="5"/>
      <enum name="stateHidden" value="6"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="AppButton">
    <attr name="drawableTint" format="color"/>
  </declare-styleable>
</resources>